<%- include("header.ejs") %>

    <section class="disp-bar">
        <h2>Work List</h2>
    </section>
    <section class="forms">
        <% for(var i=0;i<newListItemsWork.length;i++){ %>
            <div class="item">
                <input type="checkbox" name="check" class="strikethrough" value="1">
                <label for="check" class="strikeThis">
                    <%= newListItemsWork[i] %>
                </label>
            </div>
        <%}%>
        <form action="/work" class="item" method="post">
            <input type="text" id="new-task" name="item" placeholder="Enter new task">
            <button type="submit" name="list" class="btn btn-success">+</button>
        </form>
    </section>
    <%- include("footer.ejs") %>